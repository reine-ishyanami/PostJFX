<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="260.0" prefWidth="600.0" type="VBox" xmlns="http://javafx.com/javafx/17.0.6"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER" prefHeight="65.0" prefWidth="600.0" spacing="30.0">
            <children>
                <ChoiceBox fx:id="methodChoiceBox" prefHeight="23.0" prefWidth="104.0"/>
                <TextField fx:id="urlField" prefHeight="23.0" prefWidth="289.0" promptText="请求url"/>
                <Button mnemonicParsing="false" onAction="#sendRequest" text="发送"/>
            </children>
        </HBox>
        <TabPane prefHeight="200.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="请求标头">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="600.0">
                            <children>
                                <TableView fx:id="headersTableView" editable="true" prefHeight="180.0" prefWidth="600.0">
                                    <columns>
                                        <TableColumn fx:id="nameColOfHeadersTableView" prefWidth="280.0" sortable="false"
                                                     text="参数名"/>
                                        <TableColumn fx:id="valueColOfHeadersTableView" prefWidth="280.0"
                                                     sortable="false" text="参数值"/>
                                        <TableColumn fx:id="addRowOfHeadersTableView" prefWidth="20.0" sortable="false"/>
                                        <TableColumn fx:id="removeRowOfHeadersTableView"  prefWidth="20.0" sortable="false"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="请求参数">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="600.0">
                            <children>
                                <TableView fx:id="paramsTableView" editable="true"  prefHeight="180.0" prefWidth="600.0">
                                    <columns>
                                        <TableColumn prefWidth="280.0" sortable="false" text="参数名"/>
                                        <TableColumn prefWidth="280.0" sortable="false" text="参数值"/>
                                        <TableColumn prefWidth="20.0" sortable="false"/>
                                        <TableColumn prefWidth="20.0" sortable="false"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="请求体">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="190.0" prefWidth="600.0">
                            <children>
                                <TextArea layoutX="-4.0" layoutY="-1.0" minHeight="-Infinity" minWidth="-Infinity"
                                          prefHeight="190.0" prefWidth="600.0"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</fx:root>
