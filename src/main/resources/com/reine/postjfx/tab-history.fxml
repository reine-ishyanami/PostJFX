<?xml version="1.0" encoding="UTF-8"?>


<?import com.reine.postjfx.controller.PostTabController?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root type="HBox" stylesheets="/css/tab-history.css"
         xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:id="root">
    <children>
        <PostTabController fx:id="postTabController"/>
        <VBox styleClass="historyView">
            <HBox>
                <DatePicker fx:id="datePicker"/>
                <Button fx:id="cancelBtn" onAction="#cancelDelete" disable="true">撤销删除</Button>
            </HBox>
            <ListView fx:id="historyListView">
                <placeholder>
                    <Label text="无历史记录"/>
                </placeholder>
            </ListView>
        </VBox>
    </children>
</fx:root>
